@model PD.Model.Info

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

<div class="form-box" align="center">
    <form id="info-model" method="post">
        <table class="model-table" style="margin-top: 10px;">

            <tr>
                <td>
                    <span>名称:&nbsp;</span>
                    <input name="Name" class="easyui-validatebox" data-options="required:true" value="@Model.Name" style="width: 350px"  /></td>
            </tr>
            <tr>
                <td>
                    <span>代号:&nbsp;</span>
                    <input name="Mark" class="easyui-validatebox" data-options="required:true" value="@Model.Mark" style="width: 350px"  /></td>
            </tr>

        </table>
        <div style="width: 500px; padding: 7px 0px 0px 0px;">
            <textarea id="info-content" name="Content">@Model.Content</textarea></div>
        <input name="ID" id="newid" type="hidden" value="@Model.ID" />
    </form>
</div>

