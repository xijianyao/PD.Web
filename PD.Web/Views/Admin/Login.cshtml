@model PD.Model.User
@{
    ViewBag.Title = "登录";
    Layout = null;
}
<style type="text/css">
     body {
     overflow:hidden;}
.hydl_bg{ width:100%; height:100%; background:#f2f2f2; overflow:hidden;}
.hydl{ width:330px; height:550px; margin:0 auto;position:relative;}
.hydl_top{ width:500px; height:80px;}

.hydl_cont{ width:900px; height:290px; margin-top:50px; background:url(/images/hydl_bg.jpg) no-repeat;}
.cont_left{ width:460px; height:274px; float:left; margin:7px;}

.cont_right{ width:330px; height:220px; float:right; margin-right:40px; margin-top:30px;}
.cont_right p{ width:310px; height:30px; margin:auto; margin-top:10px; color:#989898; line-height:35px;}
.cont_right .dlmm{ width:310px; height:30px; border:#ccc 1px solid; margin:auto; margin-top:5px;}
.cont_right .dlmm input{ width:270px; height:22px; margin-top:2px; margin-left:2px; border:#93F 0px solid; float:left;}
.cont_right .dlmm img{ width:30px; height:30px; float:right;}


.cont_right input.button{ width:310px; height:35px; border:#ccc 0px solid; background:url(/images/hydl_03.jpg) no-repeat; margin-left:12px; margin-top:20px; }
.hydl_foot{ width:610px; height:60px; border:#00C 1px solid; margin:auto; margin-top:20px;}

</style>
@using (Html.BeginForm("Login", "Admin", null, FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
{
    
    <center>
    <div class="hydl_bg">
	<div class="hydl">
        <div class="hydl_cont" style="width:330px;margin:0 auto;position:absolute;top:50%;margin-top:-60px;">
        	
            <div class="cont_right" style="width:330px;height:220px;margin:0 auto;">
            	<p>邮箱/用户名/验证手机</p>
                <div class="dlmm"><input name="UserName" type="text" /><img src="/images/hydl_04.jpg" width="30" height="30" /></div>
                <p>密码</p>
                <div class="dlmm"><input name="PassWord" type="password" /><img src="/images/hydl_05.jpg" width="30" height="30" /></div>
                <input name=""  value="" type="submit" class="button" />
            </div>
            @if (ViewBag.loginState)
                    {
                        <script type="text/javascript">
                            alert("@ViewBag.ErrorMessage");
                        </script>
                    }
        </div>
    </div>
</div></center>
}


